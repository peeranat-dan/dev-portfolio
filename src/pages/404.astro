---
import ThemeProvider from '@/components/theme/ThemeProvider.astro';
import { buttonVariants } from '@/components/ui/button';
import '@/styles/global.css';

const title = 'Peeranat Danaidusadeekul';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <ThemeProvider />
  </head>
  <body>
    <main
      class="grid min-h-screen place-items-center px-6 py-24 sm:py-32 lg:px-8"
    >
      <div class="text-center">
        <p class="text-base font-semibold text-primary">404</p>
        <h1
          class="mt-2 text-3xl font-bold tracking-tight text-foreground sm:text-5xl"
        >
          Page not found
        </h1>
        <p class="mt-4 text-base leading-7 text-muted-foreground">
          Sorry, we couldn&apos;t find the page you&apos;re looking for.
        </p>
        <div class="mt-8 flex items-center justify-center gap-x-6">
          <a href="/" class={buttonVariants()} aria-label="Back to home"
            >Back to home</a
          >
        </div>
      </div>
    </main>
  </body>
</html>
