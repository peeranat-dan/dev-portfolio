---
import { Separator } from '@/components/ui/separator';
import { EXPERIENCE } from '@/constants';
import { ArrowTopRightIcon } from '@radix-ui/react-icons';
---

<section id="projects" class="px-4 lg:px-0 pt-8">
  <h1 class="text-2xl font-medium">Experience</h1>
  <div class="px-4 sm:px-0">
    <ol>
      {
        EXPERIENCE.map(
          ({ company, position, period, description, companyUrl }) => (
            <li class="mt-4">
              <div class="group transition-all grid mt-4 grid-cols-4 gap-0 sm:gap-4">
                <div class="col-span-4 sm:col-span-1">
                  <p
                    class="text-muted-foreground text-sm font-medium"
                    aria-label={period.replace(' - ', ' to ')}
                  >
                    {period}
                  </p>
                </div>
                <div class="col-span-4 sm:col-span-3">
                  <div>
                    <a
                      class="text-xl font-medium hover:text-primary transition-all duration-200"
                      href={companyUrl}
                      target="_blank"
                    >
                      {position} Â· {company}
                    </a>
                    <p class="text-muted-foreground text-sm">{description} </p>
                  </div>
                </div>
              </div>
            </li>
          )
        )
      }
    </ol>
  </div>
  <Separator className="mt-8" />
</section>
